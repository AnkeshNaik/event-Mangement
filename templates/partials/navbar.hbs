  <div class="container">
    <nav>
    <ul>
      <li><a href="/">home</a></li>
      <li><a href="/about">about</a></li>
      <li><a href="/contact">contact</a></li>    
      <li><a href="/service">service</a></li>
   </ul>
  </nav>
  </div>
</he1>

</body>
</html>